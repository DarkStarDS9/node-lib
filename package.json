{
  "name": "das",
  "description": "NodeJS library for connecting to the DasKeyboard 5Q",
  "version": "1.0.0",
  "author": "Steven Bird",
  "contributors": [
    "Mike Gardner <mikejr83@gmail.com>"
  ],
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "GPL v3",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf ./dist",
    "lint": "tslint -p ./",
    "poc-ts": "ts-node --project poc/ts/tsconfig.json poc/ts/index.ts",
    "poc-ts-dev": "nodemon --exec ./node_modules/.bin/ts-node -- ./POC/ts/hdiapi.ts",
    "prebuild": "npm-run-all clean",
    "test": "echo \"Ya we probably need to have some unit tests...\"",
    "start": "npm run poc-ts-dev"
  },
  "dependencies": {
    "node-hid": "^0.7.2"
  },
  "devDependencies": {
    "@types/node": "^10.5.1",
    "@types/node-hid": "^0.7.0",
    "@types/usb": "^1.1.6",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  }
}
